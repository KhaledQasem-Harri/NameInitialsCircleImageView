<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.ramiz.sampleapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.github.ramiz.nameinitialscircleimageview.NameInitialsCircleImageView
        android:id="@+id/initialsCircleImageView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        app:text="RR"
        app:textSize="20sp"/>

    <com.github.ramiz.nameinitialscircleimageview.NameInitialsCircleImageView
        android:id="@+id/initialsCircleImageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        app:text="RR"
        app:circleBackgroundColor="@color/colorAccent"
        app:textSize="20sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With Custom Font"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"/>

    <com.github.ramiz.nameinitialscircleimageview.NameInitialsCircleImageView
        android:id="@+id/initialsCircleImageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:text="RR"
        app:textFont="@font/aguafina_script"
        app:textSize="25sp"/>

</LinearLayout>
